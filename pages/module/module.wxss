/* pages/module/module.wxss */
.detailscontainer{
  padding: 10px;
  }
.list-item{
  margin-bottom: 10px;
  min-height:60px;
  display: -webkit-flex;
  display:flex;
  padding-bottom:10px;
  border-bottom:1px solid #F0F0F0;
}
.portait{
  width:60px;
  height:60px;
}
.portait image{
  width:100%;
  height:100%;
  border-radius: 10px;
}
.desc{
  font-size:14px;
  padding-left: 10px;
  flex:1;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  overflow:hidden;
}
.fans {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.fans text{
  color: red;
}
