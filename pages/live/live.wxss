/* pages/lives/live.wxss */
.livecontainer{height: 100%;}
.navwrapper{height: 110px;width:100%;position:fixed;left:0;z-index:100;}
.navadv{height: 75px;}
.navadv image{width:100%;height: 100%;background-size:contain;}
.nav{height: 35px;line-height: 35px;}
.nav .nav-i{width:50%;display:inline-block;text-align: center;background-color:#fff;color: #737373;border-right: 1px solid #F0F0F0;box-sizing: border-box;}
.nav .nav-i.active{
  color: #438ef0;
}
.placeholder{height:110px;}
.live-list{padding: 0 10px;overflow: hidden;}
.list-item{
  margin-bottom: 10px;
  min-height:60px;
  display: -webkit-flex;
  display:flex;
  padding-bottom:10px;
  border-bottom:1px solid #F0F0F0;
}
.portait{
  width:60px;
  height:60px;
}
.portait image{
  width:100%;
  height:100%;
  border-radius: 10px;
}
.desc{
  font-size:14px;
  padding-left: 10px;
  flex:1;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  overflow:hidden;
}