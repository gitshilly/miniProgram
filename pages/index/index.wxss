/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 10px;
}
.sudokuwrapper{
  margin-top: 20px; 
  text-align: center;
  }
.sudokuwrapper text{color:coral;}
.sudoku{
  padding-top: 10px;
  width:300px;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  }
.sudoku .box-item{
  width:100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
  box-sizing: border-box;
  border:4px solid yellowgreen;
  margin-left: -4px;
  margin-top: -4px;
  }
  .sudoku .box-item:hover{
    border-color:red;
    z-index: 2;
  }
